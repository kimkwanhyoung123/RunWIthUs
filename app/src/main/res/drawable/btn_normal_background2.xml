<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#008f8c"
                android:endColor="#008f8c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#b3b3b3" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#008f8c"
                android:endColor="#008f8c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#b3b3b3" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#b3b3b3" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    <!-- default -->
</selector>